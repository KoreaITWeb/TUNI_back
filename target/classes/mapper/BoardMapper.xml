<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.tuni_back.board.mapper.Boardmapper">
    <select id="findAll" resultType="com.project.tuni_back.board.bean.vo.BoardVO">
        SELECT * FROM product ORDER BY created_at DESC
    </select>
    <select id="findById" parameterType="long" resultType="com.project.tuni_back.board.bean.vo.BoardVO">
        SELECT * FROM product WHERE id = #{id}
    </select>
    <insert id="insert" parameterType="com.project.tuni_back.board.bean.vo.BoardVO">
        INSERT INTO product (title, description, price, image_url, seller_id, created_at)
        VALUES (#{title}, #{description}, #{price}, #{imageUrl}, #{sellerId}, NOW())
    </insert>
</mapper>