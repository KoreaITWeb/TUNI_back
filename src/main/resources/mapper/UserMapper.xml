<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 연결할 인터페이스 정보를 namespace에 기술 -->
<mapper namespace="com.project.tuni_back.mapper.UserMapper">
	<insert id="save" parameterType="com.project.tuni_back.bean.vo.UserVO">
        INSERT INTO `users` (user_id, school_id, email)
        VALUES (#{userId}, #{schoolId}, #{email})
    </insert>

    <select id="findByEmail" resultType="com.project.tuni_back.bean.vo.UserVO">
        SELECT *
        FROM `users`
        WHERE email = #{email}
    </select>
    
    <select id="findByNickname" parameterType="java.lang.String" resultType="com.project.tuni_back.bean.vo.UserVO">
	    SELECT * 
	    FROM `users` 
	    WHERE user_id = #{user_id}
	</select>
</mapper>